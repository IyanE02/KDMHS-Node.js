<!DOCTYPE html>
<html lang="en">
  <%- include ../header %>
  <body>
    <%- include ../menu %>

    <form id="updateForm">
      <!-- input -->
      <div class="md-form">
        <input
          type="text"
          id="singer"
          class="form-control"
          value="<%= result.singer %>"
          required
        />
        <label for="inputLGEx">SINGER</label>
      </div>

      <div class="md-form">
        <input
          type="text"
          id="title"
          class="form-control"
          value="<%= result.title %>"
          required
        />
        <label for="inputLGEx">TITLE</label>
      </div>
      <button
        type="submit"
        onclick="location.href='/api/music'"
        class="btn btn-blue btn-md"
      >
        저장
      </button>
    </form>
    <%- include ../footer %>

    <script>
      $(function () {
        $("#updateForm").submit((event) => {
          event.preventDefault();
          // 수정
          const singer = $("#singer").val();
          const title = $("#title").val();

          $.ajax({
            url: "/api/music/<%= result._id %>",
            type: "PUT",
            data: { singer, title },
          })
            .done(() => {
              location.href = "/api/music/<%= result._id %>";
              console.log("정상");
            })
            .fail((request, status, error) => {
              alert(request.responseText);
            });
        });
      });
    </script>
  </body>
</html>
